{
  "format": "page",
  "id": "event",
  "label": "Event",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "titre": {
        "type": "Text",
        "config": {
          "label": "Titre",
          "placeholder": "Titre"
        }
      },
      "date_event": {
        "type": "Timestamp",
        "config": {
          "label": "Date et heure",
          "placeholder": "Date et heure"
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Type",
          "placeholder": "Type",
          "options": [
            "Activitée",
            "Nuit d'observation",
            "Conférence",
            "Atelier"
          ]
        }
      },
      "display_author": {
        "type": "Boolean",
        "config": {
          "label": "Afficher informations",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Intervenant (conférence & atelier)",
          "placeholder": "Intervenant (conférence & atelier)"
        }
      },
      "author_job": {
        "type": "Text",
        "config": {
          "label": "Spécialité de l'intervenant",
          "placeholder": "Spécialité de l'intervenant"
        }
      },
      "photo_intervenant": {
        "type": "Image",
        "config": {
          "label": "Photo intervenant",
          "constraint": {},
          "thumbnails": []
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Description de l'intervention",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
